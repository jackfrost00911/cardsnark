source "https://rubygems.org"

# Core Jekyll
gem "github-pages", group: :jekyll_plugins


# ----------------------------------------------------
# SEO & TRAFFIC DOMINANCE PLUGINS
# ----------------------------------------------------
group :jekyll_plugins do
  
  # AUTOMATIC SITEMAP (Critical)
  # This builds the sitemap.xml file Google needs to index you.
  gem "jekyll-sitemap"
  
  # SEO TAG (Critical - YOU WAS MISSING THIS)
  # Generates title, description, and social meta tags automatically.
  gem "jekyll-seo-tag"
  
  # RSS FEED
  # Creates feed.xml so people can subscribe.
  gem "jekyll-feed"
  
  # PAGINATION
  # Helps if you eventually have 100+ reviews.
  gem "jekyll-paginate"

end

# ----------------------------------------------------
# LINUX / RUBY 3.0+ COMPATIBILITY
# ----------------------------------------------------
# Required for running Jekyll on modern Ruby versions.
gem "webrick"

