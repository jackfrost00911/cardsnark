source "https://rubygems.org"

# ----------------------------------------------------
# CORE JEKYLL (THE "ALL-IN-ONE" PACK)
# ----------------------------------------------------
# This single gem installs Jekyll AND compatible versions of:
# - jekyll-sitemap
# - jekyll-seo-tag
# - jekyll-feed
# - jekyll-paginate
# We do not list them separately to avoid version conflicts.
gem "github-pages", group: :jekyll_plugins

# ----------------------------------------------------
# COMPATIBILITY
# ----------------------------------------------------
# Required for running Jekyll on modern Ruby (3.0+)
gem "webrick"
